{
  "manifest_version": 2,

  "name": "Wikipedia Extension",
  "description": "Looks for common words on the current page and searches Wikipedia for related articles",
  "version": "0.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://en.wikipedia.org; object-src 'self'",

  "browser_action": {
    "default_icon": "my_icon.png",
    "default_popup": "popup.html",
    "default_title": "Wikipedia Extension"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}